<?xml version="1.0" encoding="UTF-8" ?>
<?xaml-comp compile="true" ?>
<ResourceDictionary
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml">

    <!-- Global page background -->
    <Style TargetType="Page" ApplyToDerivedTypes="True">
        <Setter Property="BackgroundColor" Value="{AppThemeBinding Light={StaticResource Color.Bg.Light}, Dark={StaticResource Color.Bg.Dark}}" />
        <Setter Property="Padding" Value="0" />
    </Style>

    <!-- Typography -->
    <Style x:Key="H1LabelStyle" TargetType="Label">
        <Setter Property="FontFamily" Value="{StaticResource Font.BodyStrong}" />
        <Setter Property="FontSize" Value="{StaticResource FontSize.H1}" />
        <Setter Property="TextColor" Value="{AppThemeBinding Light={StaticResource Color.Text.Light}, Dark={StaticResource Color.Text.Dark}}" />
    </Style>

    <Style x:Key="H2LabelStyle" TargetType="Label">
        <Setter Property="FontFamily" Value="{StaticResource Font.BodyStrong}" />
        <Setter Property="FontSize" Value="{StaticResource FontSize.H2}" />
        <Setter Property="TextColor" Value="{AppThemeBinding Light={StaticResource Color.Text.Light}, Dark={StaticResource Color.Text.Dark}}" />
    </Style>

    <Style x:Key="BodyLabelStyle" TargetType="Label">
        <Setter Property="FontFamily" Value="{StaticResource Font.Body}" />
        <Setter Property="FontSize" Value="{StaticResource FontSize.Body}" />
        <Setter Property="TextColor" Value="{AppThemeBinding Light={StaticResource Color.Text.Light}, Dark={StaticResource Color.Text.Dark}}" />
    </Style>

    <Style x:Key="CaptionLabelStyle" TargetType="Label">
        <Setter Property="FontFamily" Value="{StaticResource Font.Body}" />
        <Setter Property="FontSize" Value="{StaticResource FontSize.Caption}" />
        <Setter Property="TextColor" Value="{AppThemeBinding Light={StaticResource Color.TextSubtle.Light}, Dark={StaticResource Color.TextSubtle.Dark}}" />
    </Style>

    <Style x:Key="MonospaceLabelStyle" TargetType="Label">
        <Setter Property="FontFamily" Value="{StaticResource Font.Mono}" />
        <Setter Property="FontSize" Value="{StaticResource FontSize.Caption}" />
        <Setter Property="TextColor" Value="{AppThemeBinding Light={StaticResource Color.TextMuted.Light}, Dark={StaticResource Color.TextMuted.Dark}}" />
    </Style>

    <!-- Panels -->
    <Style x:Key="PanelFrameStyle" TargetType="Frame">
        <Setter Property="BackgroundColor" Value="{AppThemeBinding Light={StaticResource Color.Surface.Light}, Dark={StaticResource Color.Surface.Dark}}" />
        <Setter Property="BorderColor" Value="{AppThemeBinding Light={StaticResource Color.BorderSubtle.Light}, Dark={StaticResource Color.BorderSubtle.Dark}}" />
        <Setter Property="CornerRadius" Value="{StaticResource Radius.M}" />
        <Setter Property="HasShadow" Value="False" />
        <Setter Property="Padding" Value="{StaticResource Pad.Panel}" />
    </Style>

    <Style x:Key="InsetFrameStyle" TargetType="Frame" BasedOn="{StaticResource PanelFrameStyle}">
        <Setter Property="BackgroundColor" Value="{AppThemeBinding Light={StaticResource Color.Surface2.Light}, Dark={StaticResource Color.Surface2.Dark}}" />
        <Setter Property="BorderColor" Value="{AppThemeBinding Light={StaticResource Color.Border.Light}, Dark={StaticResource Color.Border.Dark}}" />
        <Setter Property="CornerRadius" Value="{StaticResource Radius.S}" />
        <Setter Property="Padding" Value="10" />
    </Style>

    <!-- Inputs -->
    <Style TargetType="Entry">
        <Setter Property="FontFamily" Value="{StaticResource Font.Body}" />
        <Setter Property="FontSize" Value="{StaticResource FontSize.Body}" />
        <Setter Property="TextColor" Value="{AppThemeBinding Light={StaticResource Color.Text.Light}, Dark={StaticResource Color.Text.Dark}}" />
        <Setter Property="PlaceholderColor" Value="{AppThemeBinding Light={StaticResource Color.TextSubtle.Light}, Dark={StaticResource Color.TextSubtle.Dark}}" />
        <Setter Property="BackgroundColor" Value="{AppThemeBinding Light={StaticResource Color.Surface2.Light}, Dark={StaticResource Color.Surface2.Dark}}" />
        <Setter Property="HeightRequest" Value="40" />
        <Setter Property="Margin" Value="0" />
    </Style>

    <Style TargetType="Picker">
        <Setter Property="FontFamily" Value="{StaticResource Font.Body}" />
        <Setter Property="FontSize" Value="{StaticResource FontSize.Body}" />
        <Setter Property="TextColor" Value="{AppThemeBinding Light={StaticResource Color.Text.Light}, Dark={StaticResource Color.Text.Dark}}" />
        <Setter Property="BackgroundColor" Value="{AppThemeBinding Light={StaticResource Color.Surface2.Light}, Dark={StaticResource Color.Surface2.Dark}}" />
        <Setter Property="HeightRequest" Value="40" />
    </Style>

    <!-- Buttons: base + variants -->
    <Style x:Key="ButtonBaseStyle" TargetType="Button">
        <Setter Property="FontFamily" Value="{StaticResource Font.BodyStrong}" />
        <Setter Property="FontSize" Value="{StaticResource FontSize.Body}" />
        <Setter Property="CornerRadius" Value="{StaticResource Radius.S}" />
        <Setter Property="Padding" Value="12,10" />
        <Setter Property="MinimumHeightRequest" Value="40" />
        <Setter Property="MinimumWidthRequest" Value="40" />
        <Setter Property="BorderWidth" Value="1" />
        <Setter Property="VisualStateManager.VisualStateGroups">
            <VisualStateGroupList>
                <VisualStateGroup x:Name="CommonStates">
                    <VisualState x:Name="Normal" />
                    <VisualState x:Name="PointerOver" />
                    <VisualState x:Name="Pressed" />
                    <VisualState x:Name="Disabled">
                        <VisualState.Setters>
                            <Setter Property="Opacity" Value="0.55" />
                        </VisualState.Setters>
                    </VisualState>
                </VisualStateGroup>
            </VisualStateGroupList>
        </Setter>
    </Style>

    <Style x:Key="SecondaryButtonStyle" TargetType="Button" BasedOn="{StaticResource ButtonBaseStyle}">
        <Setter Property="BackgroundColor" Value="{AppThemeBinding Light={StaticResource Color.Surface2.Light}, Dark={StaticResource Color.Surface2.Dark}}" />
        <Setter Property="TextColor" Value="{AppThemeBinding Light={StaticResource Color.Text.Light}, Dark={StaticResource Color.Text.Dark}}" />
        <Setter Property="BorderColor" Value="{AppThemeBinding Light={StaticResource Color.Border.Light}, Dark={StaticResource Color.Border.Dark}}" />
        <Setter Property="VisualStateManager.VisualStateGroups">
            <VisualStateGroupList>
                <VisualStateGroup x:Name="CommonStates">
                    <VisualState x:Name="Normal" />
                    <VisualState x:Name="PointerOver">
                        <VisualState.Setters>
                            <Setter Property="BackgroundColor" Value="{AppThemeBinding Light={StaticResource Color.TableHeaderBg.Light}, Dark={StaticResource Color.TableHeaderBg.Dark}}" />
                        </VisualState.Setters>
                    </VisualState>
                    <VisualState x:Name="Pressed">
                        <VisualState.Setters>
                            <Setter Property="BackgroundColor" Value="{AppThemeBinding Light={StaticResource Color.BorderSubtle.Light}, Dark={StaticResource Color.BorderSubtle.Dark}}" />
                        </VisualState.Setters>
                    </VisualState>
                    <VisualState x:Name="Disabled">
                        <VisualState.Setters>
                            <Setter Property="Opacity" Value="0.55" />
                        </VisualState.Setters>
                    </VisualState>
                </VisualStateGroup>
            </VisualStateGroupList>
        </Setter>
    </Style>

    <Style x:Key="PrimaryButtonStyle" TargetType="Button" BasedOn="{StaticResource ButtonBaseStyle}">
        <Setter Property="BackgroundColor" Value="{AppThemeBinding Light={StaticResource Color.Accent.Light}, Dark={StaticResource Color.Accent.Dark}}" />
        <Setter Property="TextColor" Value="White" />
        <Setter Property="BorderColor" Value="{AppThemeBinding Light={StaticResource Color.Accent.Light}, Dark={StaticResource Color.Accent.Dark}}" />
        <Setter Property="VisualStateManager.VisualStateGroups">
            <VisualStateGroupList>
                <VisualStateGroup x:Name="CommonStates">
                    <VisualState x:Name="Normal" />
                    <VisualState x:Name="PointerOver">
                        <VisualState.Setters>
                            <Setter Property="BackgroundColor" Value="{AppThemeBinding Light={StaticResource Color.AccentHover.Light}, Dark={StaticResource Color.AccentHover.Dark}}" />
                            <Setter Property="BorderColor" Value="{AppThemeBinding Light={StaticResource Color.AccentHover.Light}, Dark={StaticResource Color.AccentHover.Dark}}" />
                        </VisualState.Setters>
                    </VisualState>
                    <VisualState x:Name="Pressed">
                        <VisualState.Setters>
                            <Setter Property="BackgroundColor" Value="{AppThemeBinding Light={StaticResource Color.AccentPressed.Light}, Dark={StaticResource Color.AccentPressed.Dark}}" />
                            <Setter Property="BorderColor" Value="{AppThemeBinding Light={StaticResource Color.AccentPressed.Light}, Dark={StaticResource Color.AccentPressed.Dark}}" />
                        </VisualState.Setters>
                    </VisualState>
                    <VisualState x:Name="Disabled">
                        <VisualState.Setters>
                            <Setter Property="Opacity" Value="0.55" />
                        </VisualState.Setters>
                    </VisualState>
                </VisualStateGroup>
            </VisualStateGroupList>
        </Setter>
    </Style>

    <Style x:Key="DangerButtonStyle" TargetType="Button" BasedOn="{StaticResource ButtonBaseStyle}">
        <Setter Property="BackgroundColor" Value="{AppThemeBinding Light={StaticResource Color.Danger.Light}, Dark={StaticResource Color.Danger.Dark}}" />
        <Setter Property="TextColor" Value="White" />
        <Setter Property="BorderColor" Value="{AppThemeBinding Light={StaticResource Color.Danger.Light}, Dark={StaticResource Color.Danger.Dark}}" />
        <Setter Property="VisualStateManager.VisualStateGroups">
            <VisualStateGroupList>
                <VisualStateGroup x:Name="CommonStates">
                    <VisualState x:Name="Normal" />
                    <VisualState x:Name="PointerOver">
                        <VisualState.Setters>
                            <Setter Property="BackgroundColor" Value="{AppThemeBinding Light={StaticResource Color.DangerHover.Light}, Dark={StaticResource Color.DangerHover.Dark}}" />
                            <Setter Property="BorderColor" Value="{AppThemeBinding Light={StaticResource Color.DangerHover.Light}, Dark={StaticResource Color.DangerHover.Dark}}" />
                        </VisualState.Setters>
                    </VisualState>
                    <VisualState x:Name="Pressed" />
                    <VisualState x:Name="Disabled">
                        <VisualState.Setters>
                            <Setter Property="Opacity" Value="0.55" />
                        </VisualState.Setters>
                    </VisualState>
                </VisualStateGroup>
            </VisualStateGroupList>
        </Setter>
    </Style>

    <!-- Table -->
    <Style x:Key="TableHeaderLabelStyle" TargetType="Label">
        <Setter Property="FontFamily" Value="{StaticResource Font.BodyStrong}" />
        <Setter Property="FontSize" Value="{StaticResource FontSize.Caption}" />
        <Setter Property="TextColor" Value="{AppThemeBinding Light={StaticResource Color.TextMuted.Light}, Dark={StaticResource Color.TextMuted.Dark}}" />
        <Setter Property="LineBreakMode" Value="TailTruncation" />
    </Style>

    <Style x:Key="TableCellLabelStyle" TargetType="Label">
        <Setter Property="FontFamily" Value="{StaticResource Font.Body}" />
        <Setter Property="FontSize" Value="{StaticResource FontSize.Body}" />
        <Setter Property="TextColor" Value="{AppThemeBinding Light={StaticResource Color.Text.Light}, Dark={StaticResource Color.Text.Dark}}" />
        <Setter Property="LineBreakMode" Value="TailTruncation" />
    </Style>

    <!-- Segmented control -->
    <Style x:Key="SegmentContainerFrameStyle" TargetType="Frame" BasedOn="{StaticResource InsetFrameStyle}">
        <Setter Property="Padding" Value="2" />
        <Setter Property="CornerRadius" Value="{StaticResource Radius.S}" />
    </Style>

    <Style x:Key="SegmentButtonStyle" TargetType="Button" BasedOn="{StaticResource ButtonBaseStyle}">
        <Setter Property="BackgroundColor" Value="Transparent" />
        <Setter Property="BorderColor" Value="Transparent" />
        <Setter Property="BorderWidth" Value="0" />
        <Setter Property="TextColor" Value="{AppThemeBinding Light={StaticResource Color.TextMuted.Light}, Dark={StaticResource Color.TextMuted.Dark}}" />
        <Setter Property="Padding" Value="10,8" />
        <Setter Property="MinimumHeightRequest" Value="34" />
        <Setter Property="FontSize" Value="{StaticResource FontSize.Caption}" />
    </Style>

    <!-- Badges -->
    <Style x:Key="BadgeFrameStyle" TargetType="Frame">
        <Setter Property="Padding" Value="8,4" />
        <Setter Property="CornerRadius" Value="{StaticResource Radius.S}" />
        <Setter Property="HasShadow" Value="False" />
        <Setter Property="BackgroundColor" Value="{AppThemeBinding Light={StaticResource Color.TableHeaderBg.Light}, Dark={StaticResource Color.TableHeaderBg.Dark}}" />
        <Setter Property="BorderColor" Value="{AppThemeBinding Light={StaticResource Color.BorderSubtle.Light}, Dark={StaticResource Color.BorderSubtle.Dark}}" />
    </Style>

</ResourceDictionary>

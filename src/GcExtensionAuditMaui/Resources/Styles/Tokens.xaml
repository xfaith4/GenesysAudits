<?xml version="1.0" encoding="UTF-8" ?>
<?xaml-comp compile="true" ?>
<ResourceDictionary
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml">

    <!--
        Enterprise design tokens (Windows-first)
        Notes:
        - Themeable colors are stored as strings (Light/Dark) so they can be consumed via AppThemeBinding.
        - Spacing/typography/radii are device-independent units and scale well on Windows.
    -->

    <!-- Spacing scale -->
    <x:Double x:Key="Space.1">4</x:Double>
    <x:Double x:Key="Space.2">8</x:Double>
    <x:Double x:Key="Space.3">12</x:Double>
    <x:Double x:Key="Space.4">16</x:Double>
    <x:Double x:Key="Space.5">24</x:Double>
    <x:Double x:Key="Space.6">32</x:Double>

    <!-- Radii -->
    <x:Double x:Key="Radius.S">6</x:Double>
    <x:Double x:Key="Radius.M">10</x:Double>
    <x:Double x:Key="Radius.L">14</x:Double>

    <!-- Typography -->
    <x:Double x:Key="FontSize.H1">18</x:Double>
    <x:Double x:Key="FontSize.H2">14</x:Double>
    <x:Double x:Key="FontSize.Body">13</x:Double>
    <x:Double x:Key="FontSize.Caption">11</x:Double>
    <x:String x:Key="Font.Body">OpenSansRegular</x:String>
    <x:String x:Key="Font.BodyStrong">OpenSansSemibold</x:String>
    <x:String x:Key="Font.Mono">Consolas</x:String>

    <!-- Themeable colors (strings) -->
    <x:String x:Key="Color.Bg.Light">#F6F7F9</x:String>
    <x:String x:Key="Color.Bg.Dark">#0B1220</x:String>

    <x:String x:Key="Color.Surface.Light">#FFFFFF</x:String>
    <x:String x:Key="Color.Surface.Dark">#0F172A</x:String>

    <x:String x:Key="Color.Surface2.Light">#FAFAFB</x:String>
    <x:String x:Key="Color.Surface2.Dark">#111C33</x:String>

    <x:String x:Key="Color.Text.Light">#111827</x:String>
    <x:String x:Key="Color.Text.Dark">#F9FAFB</x:String>

    <x:String x:Key="Color.TextMuted.Light">#4B5563</x:String>
    <x:String x:Key="Color.TextMuted.Dark">#CBD5E1</x:String>

    <x:String x:Key="Color.TextSubtle.Light">#6B7280</x:String>
    <x:String x:Key="Color.TextSubtle.Dark">#94A3B8</x:String>

    <x:String x:Key="Color.Border.Light">#D1D5DB</x:String>
    <x:String x:Key="Color.Border.Dark">#23314D</x:String>

    <x:String x:Key="Color.BorderSubtle.Light">#E5E7EB</x:String>
    <x:String x:Key="Color.BorderSubtle.Dark">#1C2A44</x:String>

    <x:String x:Key="Color.Accent.Light">#2563EB</x:String>
    <x:String x:Key="Color.Accent.Dark">#60A5FA</x:String>

    <x:String x:Key="Color.AccentHover.Light">#1D4ED8</x:String>
    <x:String x:Key="Color.AccentHover.Dark">#93C5FD</x:String>

    <x:String x:Key="Color.AccentPressed.Light">#1E40AF</x:String>
    <x:String x:Key="Color.AccentPressed.Dark">#BFDBFE</x:String>

    <x:String x:Key="Color.Danger.Light">#DC2626</x:String>
    <x:String x:Key="Color.Danger.Dark">#F87171</x:String>

    <x:String x:Key="Color.DangerHover.Light">#B91C1C</x:String>
    <x:String x:Key="Color.DangerHover.Dark">#FCA5A5</x:String>

    <x:String x:Key="Color.TableHeaderBg.Light">#F3F4F6</x:String>
    <x:String x:Key="Color.TableHeaderBg.Dark">#0B162B</x:String>

    <x:String x:Key="Color.RowSelectedBg.Light">#DBEAFE</x:String>
    <x:String x:Key="Color.RowSelectedBg.Dark">#0B2A5B</x:String>

    <!-- Layout helpers -->
    <Thickness x:Key="Pad.Page">12</Thickness>
    <Thickness x:Key="Pad.Panel">12</Thickness>
    <Thickness x:Key="Pad.Cell">8,6</Thickness>

</ResourceDictionary>


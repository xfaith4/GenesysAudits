<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="GcExtensionAuditMaui.Views.PatchPlanPage"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:patch="clr-namespace:GcExtensionAuditMaui.Models.Patch"
    xmlns:planning="clr-namespace:GcExtensionAuditMaui.Models.Planning"
    xmlns:vm="clr-namespace:GcExtensionAuditMaui.ViewModels"
    x:DataType="vm:PatchPlanViewModel"
    Title="Patch Plan">

    <VerticalStackLayout Padding="12" Spacing="10">
        <Frame BorderColor="#E5E7EB" BackgroundColor="#F9FAFB" Padding="10">
            <VerticalStackLayout Spacing="10">
                <Label Text="âš ï¸ Comprehensive Patch - Select Issue Types to Fix" FontAttributes="Bold" FontSize="14" />
                
                <Grid ColumnDefinitions="Auto,Auto,Auto,Auto" RowDefinitions="Auto,Auto" ColumnSpacing="15" RowSpacing="10">
                    <HorizontalStackLayout Grid.Row="0" Grid.Column="0" Spacing="8">
                        <CheckBox IsChecked="{Binding IncludeMissing}" />
                        <Label Text="Missing Extensions" VerticalTextAlignment="Center" />
                    </HorizontalStackLayout>

                    <HorizontalStackLayout Grid.Row="0" Grid.Column="1" Spacing="8">
                        <CheckBox IsChecked="{Binding IncludeDuplicateUser}" />
                        <Label Text="Duplicate Users" VerticalTextAlignment="Center" />
                    </HorizontalStackLayout>

                    <HorizontalStackLayout Grid.Row="0" Grid.Column="2" Spacing="8">
                        <CheckBox IsChecked="{Binding IncludeDiscrepancy}" />
                        <Label Text="Discrepancies" VerticalTextAlignment="Center" />
                    </HorizontalStackLayout>

                    <HorizontalStackLayout Grid.Row="0" Grid.Column="3" Spacing="8">
                        <CheckBox IsChecked="{Binding IncludeReassert}" />
                        <Label Text="Reassert Consistent" VerticalTextAlignment="Center" />
                    </HorizontalStackLayout>

                    <Button Grid.Row="1" Grid.Column="0" Text="Generate Plan" Command="{Binding GeneratePlanCommand}" />
                </Grid>

                <Label Text="{Binding PlanSummaryText}" FontSize="12" TextColor="#6B7280" LineBreakMode="WordWrap" />

                <Label Text="Plan Items - Change Preview (filtered by selected categories):" FontAttributes="Bold" FontSize="12" />
                <Label Text="ðŸ’¡ Review what will change: Current Extension â†’ Target Extension" FontSize="11" TextColor="#6B7280" />
                <ScrollView Orientation="Horizontal">
                    <Grid RowDefinitions="Auto,*" ColumnSpacing="0">
                        <Grid Grid.Row="0" ColumnDefinitions="140,200,260,120,30,120,140,*" Padding="6" BackgroundColor="#F3F4F6">
                            <Label Grid.Column="0" Text="Category" FontAttributes="Bold" />
                            <Label Grid.Column="1" Text="Action" FontAttributes="Bold" />
                            <Label Grid.Column="2" Text="User" FontAttributes="Bold" />
                            <Label Grid.Column="3" Text="Current Ext" FontAttributes="Bold" />
                            <Label Grid.Column="4" Text="â†’" FontAttributes="Bold" HorizontalTextAlignment="Center" />
                            <Label Grid.Column="5" Text="Target Ext" FontAttributes="Bold" />
                            <Label Grid.Column="6" Text="User ID" FontAttributes="Bold" />
                            <Label Grid.Column="7" Text="Notes" FontAttributes="Bold" />
                        </Grid>

                        <CollectionView Grid.Row="1" ItemsSource="{Binding PlanItems}" HeightRequest="200">
                            <CollectionView.ItemTemplate>
                                <DataTemplate x:DataType="planning:FixupItem">
                                    <Grid ColumnDefinitions="140,200,260,120,30,120,140,400" Padding="6">
                                        <!-- Category with color coding -->
                                        <Frame Grid.Column="0" Padding="4,2" CornerRadius="4" HasShadow="False" BorderColor="Transparent">
                                            <Frame.Triggers>
                                                <DataTrigger TargetType="Frame" Binding="{Binding Category}" Value="Missing">
                                                    <Setter Property="BackgroundColor" Value="#FEE2E2" />
                                                </DataTrigger>
                                                <DataTrigger TargetType="Frame" Binding="{Binding Category}" Value="DuplicateUser">
                                                    <Setter Property="BackgroundColor" Value="#FEF3C7" />
                                                </DataTrigger>
                                                <DataTrigger TargetType="Frame" Binding="{Binding Category}" Value="Discrepancy">
                                                    <Setter Property="BackgroundColor" Value="#DBEAFE" />
                                                </DataTrigger>
                                                <DataTrigger TargetType="Frame" Binding="{Binding Category}" Value="Reassert">
                                                    <Setter Property="BackgroundColor" Value="#E5E7EB" />
                                                </DataTrigger>
                                            </Frame.Triggers>
                                            <Label Text="{Binding Category}" FontSize="11" />
                                        </Frame>
                                        
                                        <Label Grid.Column="1" Text="{Binding Action}" FontSize="12" />
                                        <Label Grid.Column="2" Text="{Binding User}" />
                                        
                                        <!-- Current Extension (before) -->
                                        <Label Grid.Column="3" Text="{Binding CurrentExtension}" TextColor="#DC2626" FontFamily="Courier New" />
                                        
                                        <!-- Arrow -->
                                        <Label Grid.Column="4" Text="â†’" HorizontalTextAlignment="Center" FontSize="14" FontAttributes="Bold" TextColor="#6B7280" />
                                        
                                        <!-- Target Extension (after) -->
                                        <Label Grid.Column="5" Text="{Binding RecommendedExtension}" TextColor="#16A34A" FontAttributes="Bold" FontFamily="Courier New" />
                                        
                                        <Label Grid.Column="6" Text="{Binding UserId}" FontSize="11" TextColor="#6B7280" />
                                        <Label Grid.Column="7" Text="{Binding Notes}" LineBreakMode="TailTruncation" FontSize="11" />
                                    </Grid>
                                </DataTemplate>
                            </CollectionView.ItemTemplate>
                        </CollectionView>
                    </Grid>
                </ScrollView>
            </VerticalStackLayout>
        </Frame>

        <Frame BorderColor="#E5E7EB" BackgroundColor="#FFF3CD" Padding="10">
            <VerticalStackLayout Spacing="10">
                <Label Text="âš ï¸ Patch Execution Settings" FontAttributes="Bold" FontSize="14" />
                
                <Grid ColumnDefinitions="Auto,Auto,Auto,Auto,Auto,Auto,Auto,Auto,*,Auto" RowDefinitions="Auto,Auto" ColumnSpacing="10" RowSpacing="10">
                    <HorizontalStackLayout Grid.Row="0" Grid.Column="0" Spacing="8">
                        <Switch IsToggled="{Binding WhatIf}" />
                        <Label Text="WhatIf" VerticalTextAlignment="Center" />
                    </HorizontalStackLayout>

                    <Label Grid.Row="0" Grid.Column="2" Text="Sleep (ms)" VerticalTextAlignment="Center" />
                    <Entry Grid.Row="0" Grid.Column="3" Text="{Binding SleepMsBetween}" Keyboard="Numeric" WidthRequest="90" />

                    <Label Grid.Row="0" Grid.Column="4" Text="Max updates" VerticalTextAlignment="Center" />
                    <Entry Grid.Row="0" Grid.Column="5" Text="{Binding MaxUpdates}" Keyboard="Numeric" WidthRequest="90" />

                    <Label Grid.Row="0" Grid.Column="6" Text="Max failures" VerticalTextAlignment="Center" />
                    <Entry Grid.Row="0" Grid.Column="7" Text="{Binding MaxFailures}" Keyboard="Numeric" WidthRequest="90" />

                    <Button Grid.Row="0" Grid.Column="9" Text="âš ï¸ RUN PATCH" Command="{Binding RunPatchCommand}" BackgroundColor="#DC2626" TextColor="White" />

                    <Label Grid.Row="1" Grid.Column="0" Text="Confirm" VerticalTextAlignment="Center" />
                    <Entry Grid.Row="1" Grid.Column="1" Text="{Binding ConfirmText}" WidthRequest="140" />
                    
                    <HorizontalStackLayout Grid.Row="1" Grid.Column="2" Grid.ColumnSpan="3" Spacing="8">
                        <CheckBox IsChecked="{Binding EnablePostPatchVerification}" />
                        <Label Text="Enable post-patch verification (compares actual state vs expected)" 
                               VerticalTextAlignment="Center" 
                               FontSize="12" 
                               TextColor="#374151" />
                    </HorizontalStackLayout>
                    
                    <Label Grid.Row="1" Grid.Column="5" Grid.ColumnSpan="5" Text="âš ï¸ For REAL changes: uncheck WhatIf, type PATCH, and confirm TWICE." FontSize="12" TextColor="#DC2626" FontAttributes="Bold" VerticalTextAlignment="Center" />
                </Grid>
            </VerticalStackLayout>
        </Frame>

        <HorizontalStackLayout Spacing="10">
            <Button Text="Cancel" Command="{Binding CancelCommand}" />
            <Button Text="Open Out" Command="{Binding OpenOutCommand}" />
            <ActivityIndicator IsRunning="{Binding IsBusy}" IsVisible="{Binding IsBusy}" />
            <Label Text="{Binding StatusText}" VerticalTextAlignment="Center" />
        </HorizontalStackLayout>

        <Editor Text="{Binding SummaryText}" AutoSize="TextChanges" IsReadOnly="True" HeightRequest="80" />
        <Label Text="{Binding LastExportFolder}" FontSize="12" TextColor="#6B7280" />

        <Label Text="Updated" FontAttributes="Bold" />
        <CollectionView ItemsSource="{Binding Updated}" HeightRequest="120">
            <CollectionView.ItemTemplate>
                <DataTemplate x:DataType="patch:PatchUpdatedRow">
                    <Grid ColumnDefinitions="220,140,120,200" Padding="6">
                        <Label Grid.Column="0" Text="{Binding User}" />
                        <Label Grid.Column="1" Text="{Binding Extension}" />
                        <Label Grid.Column="2" Text="{Binding Status}" />
                        <Label Grid.Column="3" Text="{Binding UserId}" FontSize="12" TextColor="#6B7280" />
                    </Grid>
                </DataTemplate>
            </CollectionView.ItemTemplate>
        </CollectionView>

        <Label Text="Skipped" FontAttributes="Bold" />
        <CollectionView ItemsSource="{Binding Skipped}" HeightRequest="120">
            <CollectionView.ItemTemplate>
                <DataTemplate x:DataType="patch:PatchSkippedRow">
                    <Grid ColumnDefinitions="200,220,140,200" Padding="6">
                        <Label Grid.Column="0" Text="{Binding Reason}" />
                        <Label Grid.Column="1" Text="{Binding User}" />
                        <Label Grid.Column="2" Text="{Binding Extension}" />
                        <Label Grid.Column="3" Text="{Binding UserId}" FontSize="12" TextColor="#6B7280" />
                    </Grid>
                </DataTemplate>
            </CollectionView.ItemTemplate>
        </CollectionView>

        <Label Text="Failed" FontAttributes="Bold" />
        <CollectionView ItemsSource="{Binding Failed}" HeightRequest="120">
            <CollectionView.ItemTemplate>
                <DataTemplate x:DataType="patch:PatchFailedRow">
                    <Grid ColumnDefinitions="220,140,400" Padding="6">
                        <Label Grid.Column="0" Text="{Binding User}" />
                        <Label Grid.Column="1" Text="{Binding Extension}" />
                        <Label Grid.Column="2" Text="{Binding Error}" LineBreakMode="TailTruncation" />
                    </Grid>
                </DataTemplate>
            </CollectionView.ItemTemplate>
        </CollectionView>

        <!-- Post-Patch Verification Results -->
        <Frame BorderColor="#DADDE2" BackgroundColor="#F0FDF4" Padding="10">
            <Frame.Triggers>
                <DataTrigger TargetType="Frame" Binding="{Binding VerificationSummary}" Value="">
                    <Setter Property="IsVisible" Value="False" />
                </DataTrigger>
            </Frame.Triggers>
            <VerticalStackLayout Spacing="10">
                <Label Text="âœ“ Post-Patch Verification Results" FontAttributes="Bold" FontSize="14" TextColor="#166534" />
                <Label Text="{Binding VerificationSummary}" FontSize="12" TextColor="#374151" LineBreakMode="WordWrap" />
                
                <Label Text="Verification Details:" FontAttributes="Bold" FontSize="12" />
                <ScrollView Orientation="Horizontal">
                    <Grid RowDefinitions="Auto,*" ColumnSpacing="0">
                        <Grid Grid.Row="0" ColumnDefinitions="200,140,140,140,60,300" Padding="6" BackgroundColor="#E5E7EB">
                            <Label Grid.Column="0" Text="User" FontAttributes="Bold" />
                            <Label Grid.Column="1" Text="Expected" FontAttributes="Bold" />
                            <Label Grid.Column="2" Text="Actual" FontAttributes="Bold" />
                            <Label Grid.Column="3" Text="User ID" FontAttributes="Bold" />
                            <Label Grid.Column="4" Text="Status" FontAttributes="Bold" />
                            <Label Grid.Column="5" Text="Notes" FontAttributes="Bold" />
                        </Grid>

                        <CollectionView Grid.Row="1" ItemsSource="{Binding VerificationItems}" HeightRequest="200">
                            <CollectionView.ItemTemplate>
                                <DataTemplate x:DataType="patch:VerificationItem">
                                    <Grid ColumnDefinitions="200,140,140,140,60,300" Padding="6">
                                        <Label Grid.Column="0" Text="{Binding UserDisplay}" />
                                        <Label Grid.Column="1" Text="{Binding ExpectedExtension}" />
                                        <Label Grid.Column="2" Text="{Binding ActualExtension}">
                                            <Label.Triggers>
                                                <DataTrigger TargetType="Label" Binding="{Binding Status}" Value="Mismatch">
                                                    <Setter Property="TextColor" Value="#DC2626" />
                                                    <Setter Property="FontAttributes" Value="Bold" />
                                                </DataTrigger>
                                                <DataTrigger TargetType="Label" Binding="{Binding Status}" Value="Confirmed">
                                                    <Setter Property="TextColor" Value="#16A34A" />
                                                </DataTrigger>
                                            </Label.Triggers>
                                        </Label>
                                        <Label Grid.Column="3" Text="{Binding UserId}" FontSize="12" TextColor="#6B7280" />
                                        <Label Grid.Column="4" Text="{Binding Status}" FontSize="11">
                                            <Label.Triggers>
                                                <DataTrigger TargetType="Label" Binding="{Binding Status}" Value="Confirmed">
                                                    <Setter Property="TextColor" Value="#16A34A" />
                                                </DataTrigger>
                                                <DataTrigger TargetType="Label" Binding="{Binding Status}" Value="Mismatch">
                                                    <Setter Property="TextColor" Value="#DC2626" />
                                                </DataTrigger>
                                                <DataTrigger TargetType="Label" Binding="{Binding Status}" Value="Error">
                                                    <Setter Property="TextColor" Value="#DC2626" />
                                                </DataTrigger>
                                            </Label.Triggers>
                                        </Label>
                                        <Label Grid.Column="5" Text="{Binding ErrorMessage}" FontSize="11" TextColor="#6B7280" LineBreakMode="TailTruncation" />
                                    </Grid>
                                </DataTemplate>
                            </CollectionView.ItemTemplate>
                        </CollectionView>
                    </Grid>
                </ScrollView>
            </VerticalStackLayout>
        </Frame>

    </VerticalStackLayout>
</ContentPage>
